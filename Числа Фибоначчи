# Рассчитываем n–е число ряда Фибоначчи
def fib(n):
    # Базовые случаи
    if n == 0:
        return 0
    if n == 1:
        return 1
    # Рекурсивный случай 
    return fib(n–1) + fib(n–2)
# Рассчитываем число Фибоначчи, запрошенное пользователем 
n = int(input("Введите неотрицательное число: "))
print("fib({}) равно {}.".format(n, fib(n)))
